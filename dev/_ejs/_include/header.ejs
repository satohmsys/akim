<header class="siteHeader">
	<div class="wrap">
		<% if( $active=='top' ){ %>
		<p class="siteHeader__logo">
			<img src="<%- $path %>img/common/logo.svg" width="100" alt="AKIM">
		</p>
		<% } else { %>
		<p class="siteHeader__logo">
			<a href="/"><img src="<%- $path %>img/common/logo.svg" width="50" alt="AKIM"></a>
		</p>
		<% } %>
		<nav class="siteHeader__nav">
			<div class="siteHeader__mainNav">
				<div class="navtoggle navtoggle--close">
					<i></i>
					<span class="navtoggle__label">CLOSE</span>
				</div>
				<nav>
					<ul>
						<li <% if($active=='company' ){ %>class="current-menu-item"
							<% } %>><a href="/page-archive-company.html">会社案内</a></li>
						<li <% if($active=='products' ){ %>class="current-menu-item"
							<% } %>>
								<a href="<%- $path %>/products.html">製品情報</a>
						</li>
						<li <% if($active=='recruit' ){ %>class="current-menu-item"
							<% } %>><a href="/page-recruit.html">採用情報</a></li>
						<li <% if($active=='news' ){ %>class="current-menu-item"
							<% } %>><a href="<%- $path %>/news.html">お知らせ</a></li>
						<li <% if($active=='contact' ){ %>class="current-menu-item"
						<% } %>><a href="<%- $path %>/contact.html">お問い合わせ</a></li>
					</ul>
					<div class="language"><a href=""><span class="language__label">Global</span><span>EN</span></a></div>
				</nav>
			</div>
			<div class="navtoggle navtoggle--open">
				<span class="navtoggle__label">MENU</span>
				<i></i>
			</div>
		</nav>
	</div>
</header>